{
  "compilerOptions": {
    "alwaysStrict": true,
    "charset": "utf8",
    "target": "ES2018",
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "module": "CommonJS",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true,
    "inlineSourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "@types",
    "node_modules/@types"
  ],
  "ts-node": {
    "swc": true
  }
}
